<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="3"
       android:orientation="horizontal"
       android:gravity="center"
       android:background="#000">
       <TextView
           android:id="@+id/title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:padding="2dp"
           android:text="MyRadar"
           android:textColor="#434343"
           android:textSize="42sp"
           />
   </LinearLayout>
    <!--扫描框之上-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#2d2d2d"
        android:orientation="horizontal"
        android:layout_weight="2">
        <ImageView
            android:id="@+id/locateMyself"
            android:src="@drawable/locate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
           />
        <ImageView
        android:src="@drawable/heng_line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        />
        <ImageView
            android:src="@drawable/help"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <!--扫描框-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="364dp"
        android:orientation="horizontal"
      >
        <LinearLayout
            android:background="#2d2d2d"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </LinearLayout>
        <!--这里的布局简直经典,宽度由图片定，高度由这一层的LinearLayout订-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.baidu.mapapi.map.MapView
                    android:id="@+id/bmapView"
                    android:layout_width="280dp"
                    android:layout_height="280dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    />
                <ImageView
                    android:id="@+id/cirle"
                    android:layout_width="310dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/centre_radar2"
                    />
            </FrameLayout>
        </LinearLayout>
        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:src="@drawable/centre_radar2"-->
            <!--android:adjustViewBounds="true"/>-->
        <LinearLayout
            android:background="#2d2d2d"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </LinearLayout>

    </LinearLayout>
<!--扫描框之下-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#2d2d2d"
        android:orientation="horizontal"
        android:layout_weight="2">
        <ImageView
            android:id="@+id/refresh"
            android:src="@drawable/refresh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"/>
        <ImageView
            android:src="@drawable/metal_copy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="bottom"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <!--底部按钮-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#111111"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="3"
        >
        <ImageView
            android:src="@drawable/enemimes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/findFriends"
            android:src="@drawable/friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"/>
    </LinearLayout>
</LinearLayout>